{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}